---
import HeaderLink from "./HeaderLink.astro";
import SignInButton from "./SignInButton.astro";
import WriteButton from "./WriteButton.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/faq">Help</HeaderLink>
    </div>
    <div class="flex gap-2 items-center">
      <WriteButton />
      <SignInButton />
    </div>
  </nav>
  <style>
    header {
      margin: 0 0 0.5rem; /* Reduce bottom margin */
      padding: 0 1em;
      background: white;
      box-shadow: 0 2px 8px rgba(var(--black), 5%);
    }
    h2 {
      margin: 0;
      font-size: 1em;
      flex: 0 0 200px; /* Give fixed width to logo area */
    }
    h2 a,
    h2 a.active {
      text-decoration: none;
    }
    nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0.5rem 0;
    }
    .internal-links {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center; /* Center the links */
      gap: 2rem;
      margin: 0 1rem;
    }
    nav a {
      padding: 1em 0.5em;
      color: var(--black);
      border-bottom: 4px solid transparent;
      text-decoration: none;
    }
    nav a.active {
      text-decoration: none;
      border-bottom-color: var(--accent);
    }
    .flex.gap-2 {
      display: flex;
      align-items: center;
      padding-left: 1rem;
      /* remove the fixed width constraint */
      justify-content: flex-end;
    }
  </style>
</header>
