---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section
        class="min-h-[40vh] flex items-center justify-center bg-white px-8"
      >
        <div class="max-w-3xl text-center text-black">
          <h1 class="text-5xl font-bold mb-6">Blogging Platform</h1>
          <p class="text-xl mb-8 opacity-80">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
            eiusmod tempor incididunt ut labore et dolore magna aliqua.
          </p>
          <div class="flex gap-4 justify-center">
            <a
              href="/blog"
              class="px-8 py-3 rounded-full font-semibold bg-black text-white transition-transform hover:-translate-y-0.5"
            >
              Get Started
            </a>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
