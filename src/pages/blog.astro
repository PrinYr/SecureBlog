---
import TestLayout from "../layouts/TestLayout.astro";
const pageTitle = "Astro";
const allPosts = await Astro.glob("./posts/*.md");
import Postblog from "../components/Postblog.astro";
---

<TestLayout pageTitle={pageTitle}>
  <h1>My Astro Learning Blog</h1>
  <p>This is where I will post about my journey learning Astro.</p>
  <ul>
    {
      allPosts.map((post) => (
        <Postblog url={post.url} title={post.frontmatter.title} />
      ))
    }
  </ul>
</TestLayout>
